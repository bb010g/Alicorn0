{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug (LuaJIT): runtest.lua",
            "program": {
                "command": "luajit"
            },
            "verbose": true,
            "args": [
                "runtest.lua",
                "-T",
                "tests/host-prog.alc"
            ]
        },
        {
            "type": "lua-local",
            "request": "launch",
            "name": "Debug (Luvit): runtest.lua",
            "program": {
                "command": "luvit"
            },
            "verbose": true,
            "args": [
                "runtest.lua"
            ]
        },
        {
            "type": "lua",
            "request": "attach",
            "name": "Luvit Attach (Windows)",
            "processName": "luvit.exe"
        },
        {
            "type": "lua",
            "request": "launch",
            "name": "Debug (LuaJIT): terms-gen-meta.lua",
            "program": "terms-gen-meta.lua",
            "luaVersion": "luajit",
            "cpath": "${workspaceFolder}/libs/?.dll",
            "path": "${workspaceFolder}/libs/?.lua"
        }
    ]
}
